{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "data": {
        "url": "https://vega.github.io/vega-lite/data/barley.json"
    },
    "encoding": {
        "color": {
            "field": "site",
            "type": "nominal"
        },
        "order": {
            "aggregate": "sum",
            "field": "yield",
            "type": "quantitative"
        },
        "x": {
            "aggregate": "sum",
            "field": "yield",
            "type": "quantitative"
        },
        "y": {
            "field": "variety",
            "type": "nominal"
        }
    },
    "mark": "bar"
}