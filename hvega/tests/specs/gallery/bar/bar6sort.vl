{
    "transform": [
        {
            "as": "siteOrder",
            "calculate": "if(datum.site === 'University Farm', 0, if(datum.site === 'Grand Rapids', 1, 2))"
        }
    ],
    "mark": "bar",
    "data": {
        "url": "https://vega.github.io/vega-lite/data/barley.json"
    },
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "encoding": {
        "color": {
            "field": "site",
            "type": "nominal"
        },
        "x": {
            "field": "yield",
            "aggregate": "sum",
            "type": "quantitative"
        },
        "order": {
            "field": "siteOrder",
            "type": "quantitative"
        },
        "y": {
            "field": "variety",
            "type": "nominal"
        }
    }
}