{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "config": {
        "legend": {
            "symbolLimit": 1,
            "unselectedOpacity": 0.1
        }
    },
    "data": {
        "url": "https://vega.github.io/vega-lite/data/cars.json"
    },
    "encoding": {
        "color": {
            "field": "Origin",
            "type": "nominal"
        },
        "shape": {
            "field": "Origin",
            "type": "nominal"
        },
        "size": {
            "condition": {
                "selection": "sel",
                "value": 100
            },
            "value": 20
        },
        "x": {
            "field": "Horsepower",
            "type": "quantitative"
        },
        "y": {
            "field": "Miles_per_Gallon",
            "type": "quantitative"
        }
    },
    "height": 300,
    "mark": {
        "filled": true,
        "type": "point"
    },
    "selection": {
        "sel": {
            "bind": {
                "legend": "dblclick"
            },
            "fields": [
                "Origin"
            ],
            "on": "click",
            "type": "multi"
        }
    },
    "width": 300
}