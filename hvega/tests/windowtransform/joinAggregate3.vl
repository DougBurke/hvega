{
    "transform": [
        {
            "filter": "datum.IMDB_Rating != null"
        },
        {
            "as": "year",
            "field": "Release_Date",
            "timeUnit": "year"
        },
        {
            "groupby": [
                "year"
            ],
            "joinaggregate": [
                {
                    "op": "mean",
                    "as": "AverageYearRating",
                    "field": "IMDB_Rating"
                }
            ]
        },
        {
            "filter": "(datum.IMDB_Rating - datum.AverageYearRating) > 2.5"
        }
    ],
    "mark": "bar",
    "data": {
        "url": "https://vega.github.io/vega-lite/data/movies.json"
    },
    "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
    "encoding": {
        "x": {
            "field": "IMDB_Rating",
            "type": "quantitative",
            "axis": {
                "title": "IMDB Rating"
            }
        },
        "y": {
            "field": "Title",
            "sort": {
                "encoding": "x",
                "order": "descending"
            },
            "type": "nominal",
            "axis": {
                "title": ""
            }
        }
    }
}